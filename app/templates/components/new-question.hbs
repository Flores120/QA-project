{{#if addNewQuestion}}
<div>
  <form>
    <label for="question">Question</label>
   {{input value=question}}

    <label for="author">Author</label>
   {{input value=author}}

   <label for="questionDetails">More Info</label>
  {{input value=questionDetails}}
   <button {{action 'postQuestion'}}>Post Question</button>
  </form>
</div>
{{else}}
<button {{action "questionFormShow"}}>New Question</button>
{{/if}}
